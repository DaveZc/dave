<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>dave</artifactId>
        <groupId>com.chenZ</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>dave-control</artifactId>
    <packaging>war</packaging>

    <dependencies>

        <!-- modules -->
        <dependency>
            <groupId>com.chenZ</groupId>
            <artifactId>dave-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.chenZ</groupId>
            <artifactId>dave-service</artifactId>
            <version>${project.version}</version>
        </dependency>


    </dependencies>
    <build>
        <finalName>dave-control</finalName>

        <plugins>
            <plugin>
                <!-- 加入maven deploy插件，当在deploy时，忽略此model-->
                <!--跳过测试类-->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.18.1</version>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
